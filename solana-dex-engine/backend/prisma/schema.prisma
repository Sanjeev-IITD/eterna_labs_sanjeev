generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id        String   @id @default(uuid())
  type      String   @default("market")
  status    String   @default("pending")
  tokenIn   String
  tokenOut  String
  amount    Float
  dex       String?
  txHash    String?
  price     Float?
  error     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
